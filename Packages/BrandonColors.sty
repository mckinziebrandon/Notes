% Regular colors. 
\newcommand\blue[1]{\textcolor{MediumSlateBlue}{\textbf{#1}}}
\newcommand\red[1]{\textcolor{Maroon}{\textbf{#1}}}
\newcommand\green[1]{\textcolor{OliveGreen}{\textbf{#1}}}
\newcommand\purple[1]{\textcolor{RoyalPurple}{\textbf{#1}}}
\newcommand\orange[1]{\textcolor{Orange}{\textbf{#1}}}
\newcommand\pink[1]{\textcolor{Magenta}{\textbf{#1}}}
\newcommand\gray[1]{\textcolor{Gray}{\textbf{#1}}}
